<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <CheckedTextView
        android:id="@+id/SensorEnable"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:text="알람센서 사용"
        android:layout_marginLeft="10dp"
        android:textSize="12pt"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        />

    <View
        android:layout_width="fill_parent" android:background="#5dc9f7"
        android:layout_height="2dip"
        android:layout_marginLeft="6dp" android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"  android:layout_marginBottom="10dp"
         />
    <TimePicker
        android:id="@+id/time_picker"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/set_mon"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:text="월"
            android:layout_marginLeft="6dp"
            android:background="#ffcccccc"
            />
        <Button
            android:id="@+id/set_tue"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:text="화"
            android:layout_marginLeft="6dp"
            android:background="#ffcccccc"
            />
        <Button
            android:id="@+id/set_wed"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:text="수"
            android:layout_marginLeft="6dp"
            android:background="#ffcccccc"
            />
        <Button
            android:id="@+id/set_thr"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:text="목"
            android:layout_marginLeft="6dp"
            android:background="#ffcccccc"
            />
        <Button
            android:id="@+id/set_fri"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:text="금"
            android:layout_marginLeft="6dp"
            android:background="#ffcccccc"
            />
        <Button
            android:id="@+id/set_sat"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:text="토"
            android:layout_marginLeft="6dp"
            android:background="#ffcccccc"
            />
        <Button
            android:id="@+id/set_sun"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:text="일"
            android:layout_marginLeft="6dp"
            android:background="#ffcccccc"
            />
        </LinearLayout>


    <View
        android:layout_width="fill_parent" android:background="#5dc9f7"
        android:layout_height="2dip"
        android:layout_marginLeft="6dp" android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"  android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/set"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:layout_marginLeft="10dp"
        android:text="test"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/AddAlarmCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:layout_marginLeft="6dp"
            />
        <Button
            android:id="@+id/AddAlarmOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:layout_marginLeft="6dp"
            />
        </LinearLayout>

</LinearLayout>